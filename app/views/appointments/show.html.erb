<%= link_to 'Back', user_path(@user.id), class: "btn btn-primary btn-lg" %>

<h1 class="display-3 text-center">Appointment</h1>

<div class="row featurette card-body mt-4">
  <div class="col-md-7">
    <h2 class="featurette-heading">You arrange appointment on:
      <span class="font-italic text-primary"><%= @appointment.appointment_date.to_s(:long) %></span></h2>
    <p class="lead">With doctor: <strong class="text-success"><%= @appointment.doctor.full_name %></strong></p>
    <p class="lead">For more than 100 years </p>
  </div>
  <div class="col-md-5">
    <!-- <%= image_tag "user-empty.jpg", height: 400, class: 'login-img' %> -->
  </div>
  <% if current_user %>
    <div>
      <%= button_to "Cancel this appointment", @appointment, 'method': :delete, class: 'btn btn-secondary text-light rounded-2 my-2 ml-3' %>
    </div>
  <% end %>
</div>
