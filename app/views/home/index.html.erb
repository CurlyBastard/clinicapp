<h1 class="display-3 text-center main-title mt-4">Hi there, visitor</h1>

<div class="display-3 text-center main-title mt-4">
  <div class="col-md-12">
    <ul class="navbar-nav mt-5 text-right">
      <% if user_signed_in? %> 
      <div> Welcome <%= current_user.email %> </div> 
        <%= button_to "Sign out", destroy_user_session_path, method: :delete, class: 'btn btn-primary btn-lg' %> 
      <% else %>
        <%= button_to "Sign in", new_user_session_path, class: 'btn btn-primary btn-lg' %> 
      <% end %>

      <% if doctor_signed_in? %> 
      <div> Welcome <%= current_doctor.email %> </div>
        <div class="custom-btn-image">
          <%= button_to "Sign out", destroy_doctor_session_path, method: :delete, class: 'btn btn-primary btn-lg' %> 
        </div>
      <% else %>
        <div class="custom-btn-image">
          <%= button_to "Are you a doctor?", new_doctor_session_path, class: 'btn btn-primary btn-lg' %> 
        </div>
      <% end %>
    </ul>
      

  </div>
</div>
